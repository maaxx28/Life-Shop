<center>

<h2>Check Out</h2>
<h3>Billing Address</h3>
<form asp-action="NewOrder">
    <dl class="row">
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            <input name="addAddress" />
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            <input name="addCity" />
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            State
        </dt>
        <dd class="col-sm-10">
            <input name="addState" />
        </dd>
    </dl>
        <dl class="row">
        <dt class="col-sm-2">
            Zip
        </dt>
        <dd class="col-sm-10">
            <input name="addZip" type="number"/>
        </dd>
    </dl>
    <h3>Enter Shipping Address</h3>
        <dl class="row">
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            <input name="addShipAddress" />
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            <input name="addShipCity" />
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            State
        </dt>
        <dd class="col-sm-10">
            <input name="addShipState" />
        </dd>
    </dl>
        <dl class="row">
        <dt class="col-sm-2">
            Zip
        </dt>
        <dd class="col-sm-10">
            <input name="addShipZip" type="number"/>
        </dd>
    </dl>
    <h2 class="text-center">Enter Card Information</h2>
    <br/>
        <dl class="row">
        <dt class="col-sm-2">
            Card Number
        </dt>
        <dd class="col-sm-10">
            <input name="addCardNumber" type="number" />
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Card Type
        </dt>
        <dd class="col-sm-10">
            <input name="addCardType" type="tel" />
        </dd>
    </dl>
        <dl class="row">
        <dt class="col-sm-2">
            CVC
        </dt>
        <dd class="col-sm-10">
            <input name="addCVC"/>
        </dd>
    </dl>
    <input type="submit" />
    <button asp-controller="Shopping" asp-action="ViewCart">Cancel</button>
</Form>
</center>

